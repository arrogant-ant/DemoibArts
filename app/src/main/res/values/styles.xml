<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- cardview theme -->
    <style name="CustomCardView" parent="CardView.Light">
        <item name="android:radius">12dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:translationZ">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
<style name="CustomCardView.Square">
    <item name="android:layout_height">128dp</item>
    <item name="android:layout_width">128dp</item>
</style>
</resources>
